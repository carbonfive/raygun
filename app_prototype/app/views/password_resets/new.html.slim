.page-header
  h1 Password Reset

= form_tag(forgotten_password_path, method: :post) do
  .control-group
    = label_tag :email, nil, class: 'control-label'
    .controls
      = text_field_tag :email, nil, placeholder: 'joe@example.com'

  .form-actions
    = submit_tag 'Reset My Password', class: 'btn btn-primary'
